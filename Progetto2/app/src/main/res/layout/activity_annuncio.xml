<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Annuncio1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="indirizzo: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/indirizzo2"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="in zona "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/zona2"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="telefono dell' affitario: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/telefono2"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="email dell' affitario: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/email4"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="prezzo al mese "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/prezzo3"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="tipo di affitto:"
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/tipo"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="90dp">
                <TextView
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="dettagli appartamento"
                        android:textColor="#00574B"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:id="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="numero camere singole: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/singole"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="numero camere doppie: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/doppie"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="numero camere triple: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/triple"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="numero bagni: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/bagni"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp"
                    android:visibility="gone"
                    android:id="@+id/rim1">
                <Button
                        android:text="Rimuovi dai preferiti"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_background"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:id="@+id/rimuovi"
                        android:layout_weight="0.5" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:onClick="rimuoviPreferito"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp"
                    android:visibility="gone"
                    android:id="@+id/rim2">
                <Button
                    android:text="Rimuovi annuncio"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_background"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:onClick="rimuovi"
                    android:id="@+id/rimuovi2" android:layout_weight="0.5"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>