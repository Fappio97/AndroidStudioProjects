<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VediProfilo">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginStart="80dp">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="150dp">
                <TextView
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="@string/immprofilo"
                        android:textColor="#00574B"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:id="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
            <TableRow
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="150dp">
                <ImageView
                        android:layout_width="128dp"
                        android:layout_height="116dp" app:srcCompat="@drawable/immprofilo"
                        android:id="@+id/imageView" android:contentDescription="@string/nuovoaccount"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/nomecognome"
                        android:minEms="15"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="username: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/username3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="email: "
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/email3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="matricola"
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/matricola2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:minHeight="60dp">
                <TextView
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:text="corso di studio"
                        android:textColor="#008577"
                        android:textSize="22sp"
                        android:id="@+id/corso2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="27dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>