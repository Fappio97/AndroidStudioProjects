<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ricerca">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" android:layout_margin="30dp" tools:layout_editor_absoluteX="20dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/list_view2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
            <TextView
                    android:text="zona:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="0.5"
                    android:textColor="#66b9bf" android:textSize="20dp"/>
            <TextView
                    android:text="tipo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0.5"
                    android:textColor="#66b9bf" android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" android:layout_marginBottom="8dp">
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/zona3"
                    android:visibility="visible"
                    android:minEms="13"
                    android:minHeight="35dp"
                    android:layout_weight="0.5" android:layout_marginRight="4dp"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipo2"
                    android:visibility="visible"
                    android:minEms="13"
                    android:minHeight="35dp"
                    android:layout_weight="0.5" android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0" android:id="@+id/layout"
                android:layout_margin="4dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textAlignment="center"
                    android:hint="prezzo minimo"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/white"
                    android:ems="10"
                    android:maxLength="80"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#07889b"
                    android:minHeight="40dp"
                    android:id="@+id/prezzomin"
                    android:inputType="number"
                    android:layout_weight="0.5" android:layout_marginRight="4dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textAlignment="center"
                    android:hint="prezzo massimo"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/white"
                    android:ems="10"
                    android:maxLength="80"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#07889b"
                    android:minHeight="40dp"
                    android:id="@+id/prezzomax"
                    android:inputType="number"
                    android:layout_weight="0.5" android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <TextView
                android:text="Almeno un campo deve essere pieno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/errric"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/holo_red_light"
                android:ems="10"
                android:visibility="gone"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
        <Button
                android:id="@+id/Ricerca"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background"
                android:text="RICERCA ANNUNCI"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:maxHeight="30dp" android:onClick="ricerca"/>

    </LinearLayout>
    <ListView
            android:id="@+id/list_view2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="291dp"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>